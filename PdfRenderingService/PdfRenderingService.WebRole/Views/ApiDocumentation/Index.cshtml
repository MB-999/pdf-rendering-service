@model dynamic

@{
    ViewBag.Title = "API Documentation";
}

<!-- Begin page content -->
<div class="container">
    <div class="page-header">
        <h1>API Documentaion for PDF Rendering Service</h1>
    </div>
    
    <p>Quite simple:</p>
    <pre>/generate-pdf?url={url}&amp;filename={optional-file-name}</pre>
    
    <p>
        Uses <a href="https://github.com/webgio/Rotativa">Rotativa</a> and
        <a href="https://github.com/wkhtmltopdf/wkhtmltopdf">wkhtmltopdf</a> to render a URL as PDF. Specify filename to change
        what the browser should name the file to when downloading it.
    </p>

    <div class="alert alert-info">Skip the optional filename parameter to make Chrome and Firefox display the PDF directly.</div>
    
    <hr/>
    <h2>Test it</h2>
    <form role="form" action="/generate-pdf" method="GET">
        <div class="form-group">
            <label for="url">URL (required)</label>
            <input type="text" class="form-control" id="url" name="url" value="http://en.wikipedia.org/wiki/Main_Page" required>
        </div>
        <div class="form-group">
            <label for="filename">Filename (optional)</label>
            <input type="text" class="form-control" id="filename" placeholder="">
        </div>
        <button type="submit" class="btn btn-default">Render</button>
    </form>

</div>  
